<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Cotizaciones</title>
  <!-- TailwindCSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-50 text-gray-800 font-sans">

  <!-- NAVBAR -->
  <nav class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-orange-500 flex items-center gap-2">
        <i data-lucide="briefcase"></i> Cotizaciones
      </h1>
      <a href="/new" 
         class="flex items-center gap-2 px-4 py-2 bg-orange-500 text-white font-semibold rounded-lg shadow hover:bg-orange-600 transition">
        <i data-lucide="plus-circle"></i> Nueva
      </a>
    </div>
  </nav>

  <!-- CONTENIDO -->
  <div class="max-w-7xl mx-auto px-6 py-10">

    <!-- Mensajes -->
    <% if (deleted) { %>
      <div id="alert-box" class="mb-6 p-4 rounded-lg bg-green-100 text-green-800 border border-green-300 flex items-center gap-2 transition-opacity duration-700">
        <i data-lucide="check-circle"></i> La cotización ha sido eliminada con éxito.
      </div>
    <% } %>

    <% if (error) { %>
      <div id="alert-box" class="mb-6 p-4 rounded-lg bg-red-100 text-red-800 border border-red-300 flex items-center gap-2 transition-opacity duration-700">
        <i data-lucide="alert-octagon"></i> Ocurrió un error al intentar eliminar la cotización.
      </div>
    <% } %>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% cotizaciones.forEach(c => { %>
        <div class="bg-white border border-gray-200 rounded-xl shadow hover:shadow-md hover:scale-[1.01] transition">
          <!-- Imagen -->
          <img src="/uploads/<%= c.Imagen %>" alt="Imagen de <%= c.cliente %>" 
               class="w-full h-48 object-cover rounded-t-xl">
          
          <!-- Contenido -->
          <div class="p-5">
            <h2 class="text-lg font-semibold text-gray-900 mb-2 flex items-center gap-2">
              <i data-lucide="user"></i> <%= c.cliente %>
            </h2>
            <p class="text-xl font-bold text-orange-500 flex items-center gap-2">
              <i data-lucide="tag"></i> S/ <%= c.precio %>
            </p>
          </div>

          <!-- Acciones -->
          <div class="px-5 py-3 flex justify-between border-t border-gray-100">
            <a href="/edit/<%= c.id %>" 
               class="text-orange-500 hover:text-orange-600 font-medium flex items-center gap-1">
              <i data-lucide="pencil"></i> Editar
            </a>

            <!-- Botón -->
            <button type="button" 
                    onclick="openModal('<%= c.id %>', '<%= c.cliente %>')" 
                    class="text-red-500 hover:text-red-600 font-medium flex items-center gap-1">
              <i data-lucide="trash-2"></i> Eliminar
            </button>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Modal -->
  <div id="delete-modal" 
       class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white rounded-xl shadow-lg p-6 w-96">
      <div class="flex items-center gap-3 mb-4">
        <i data-lucide="alert-triangle" class="text-red-500 w-6 h-6"></i>
        <h2 class="text-lg font-bold text-gray-800">Confirmar eliminación</h2>
      </div>
      <p class="text-gray-600 mb-6" id="delete-message"></p>
      
      <div class="flex justify-end gap-3">
        <button type="button" 
                onclick="closeModal()" 
                class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition flex items-center gap-1">
          <i data-lucide="x"></i> Cancelar
        </button>
        <form id="delete-form" method="POST">
          <button type="submit" 
                  class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition flex items-center gap-1">
            <i data-lucide="trash-2"></i> Sí, eliminar
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Abrir modal 
    function openModal(id, cliente) {
      document.getElementById("delete-modal").classList.remove("hidden");
      document.getElementById("delete-message").innerHTML = `
        ¿Realmente deseas eliminar la cotización de 
        <span class="font-semibold text-gray-900">${cliente}</span>?<br>
        <span class="text-sm text-red-500 flex items-center gap-1 mt-2">
          <i data-lucide="circle-x"></i> Esta acción es permanente y no se puede deshacer.
        </span>
      `;
      document.getElementById("delete-form").action = "/delete/" + id;
      lucide.createIcons(); 
    }

    // Cerrar modal
    function closeModal() {
      document.getElementById("delete-modal").classList.add("hidden");
    }

    // Alertas
    window.addEventListener("DOMContentLoaded", () => {
      const alertBox = document.getElementById("alert-box");
      if (alertBox) {
        setTimeout(() => {
          alertBox.classList.add("opacity-0");
          setTimeout(() => alertBox.remove(), 700); 
        }, 3000);
      }
      lucide.createIcons();
    });
  </script>
</body>
</html>
