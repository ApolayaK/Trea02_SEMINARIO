<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Cotización</title>
  <!-- TailwindCSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-50 text-gray-800 font-sans">

  <!-- HEADER -->
  <div class="max-w-3xl mx-auto px-6 py-10">
    <h1 class="text-2xl font-bold text-orange-500 flex items-center gap-2 mb-6">
      <i data-lucide="pencil"></i> Editar Cotización
    </h1>

    <!-- FORM -->
    <form action="/edit/<%= cotizacion.id %>" method="POST" enctype="multipart/form-data"
          class="bg-white p-6 rounded-xl shadow border border-gray-200 space-y-6">

      <!-- Cliente -->
      <div>
        <label class="block font-semibold text-gray-700 mb-1 flex items-center gap-2">
          <i data-lucide="user"></i> Cliente
        </label>
        <input type="text" name="cliente" value="<%= cotizacion.cliente %>" required
               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-400 focus:outline-none">
      </div>

      <!-- Precio -->
      <div>
        <label class="block font-semibold text-gray-700 mb-1 flex items-center gap-2">
          <i data-lucide="tag"></i> Precio
        </label>
        <input type="number" step="0.01" name="precio" value="<%= cotizacion.precio %>" required
               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-400 focus:outline-none">
      </div>

      <!-- Imagen actual -->
      <div>
        <label class="block font-semibold text-gray-700 mb-2 flex items-center gap-2">
          <i data-lucide="image"></i> Imagen actual
        </label>
        <img src="/uploads/<%= cotizacion.Imagen %>" 
             alt="Imagen actual de <%= cotizacion.cliente %>" 
             class="w-32 h-32 object-cover rounded-lg border border-gray-200 shadow-sm">
      </div>

      <!-- Nueva imagen -->
      <div>
        <label class="block font-semibold text-gray-700 mb-1 flex items-center gap-2">
          <i data-lucide="upload"></i> Nueva Imagen (opcional)
        </label>
        <input type="file" name="imagen"
               class="block w-full text-sm text-gray-600 border border-gray-300 rounded-lg cursor-pointer file:mr-4 file:py-2 file:px-4 
                      file:rounded-md file:border-0 file:text-sm file:font-semibold 
                      file:bg-orange-500 file:text-white hover:file:bg-orange-600">
      </div>

      <!-- Botones -->
      <div class="flex justify-end gap-4 pt-4 border-t border-gray-100">
        <a href="/" class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition flex items-center gap-2">
          <i data-lucide="x-circle"></i> Cancelar
        </a>
        <button type="submit" 
                class="px-6 py-2 bg-orange-500 text-white font-semibold rounded-lg shadow hover:bg-orange-600 transition flex items-center gap-2">
          <i data-lucide="save"></i> Actualizar
        </button>
      </div>
    </form>
  </div>

  <!-- Inicializar íconos -->
  <script>
    lucide.createIcons();
  </script>
</body>
</html>
