<form action="/edit/<%= cotizacion.id %>" method="POST" enctype="multipart/form-data">
  Cliente: <input type="text" name="cliente" value="<%= cotizacion.cliente %>" required><br>
  Precio: <input type="number" step="0.01" name="precio" value="<%= cotizacion.precio %>" required><br>
  Imagen actual: <img src="/uploads/<%= cotizacion.Imagen %>" width="100"><br>
  Nueva Imagen (opcional): <input type="file" name="imagen"><br>
  <button type="submit">Actualizar</button>
</form>
